<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/start_service_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始服务"/>
        <Button
            android:id="@+id/bind_service_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定服务"/>
        <Button
            android:id="@+id/intent_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IntentService测试"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/start_aidl_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="远程service测试"/>
        <Button
            android:id="@+id/sim_net_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sim卡和网络信息"/>
        <Button
            android:id="@+id/phone_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机来电"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/black_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑名单"/>
        <Button
            android:id="@+id/send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发短信"/>
        <Button
            android:id="@+id/alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闹钟"/>
        <Button
            android:id="@+id/change_wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="改变壁纸"/>
    </LinearLayout>
</LinearLayout>
